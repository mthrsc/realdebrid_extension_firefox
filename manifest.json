{
    "manifest_version": 2,
    "name": "real-debrid-ext",
    "version": "1.0",

    "description": "Offers in browser control of real-debrid.",

    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      },

    "browser_action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_popup": "popup/html/popup.html",
        "default_title": "RDE"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["app.js"]
        }
    ],

    "permissions": [
        "storage"
    ]

}
  